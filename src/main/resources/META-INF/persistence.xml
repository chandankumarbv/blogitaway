<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<persistence-unit name="blogitaway">
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://db/blogitaway"></property>
			<property name="javax.persistence.jdbc.user" value="root"></property>
			<property name="javax.persistence.jdbc.password" value="admin"></property>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"></property>
			<property name="hibernate.hbm2ddl.auto" value="create-drop"></property>

		</properties>
	</persistence-unit>

</persistence>